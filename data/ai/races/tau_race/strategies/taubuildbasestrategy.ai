function TauBuildBaseStrategy:UpdateTierLevel()

	-- Reset tier level
	self.tierLevel = 1
	
	-- Check researches
	if cpu_manager.cpu_player:IsResearchComplete("tau_apocalypse_research") then
		self.tierLevel = 6
	elseif (cpu_manager.cpu_player:IsResearchComplete("tau_path_to_destruction_research")) then
		self.tierLevel = 5
	elseif (cpu_manager.cpu_player:IsResearchComplete("tau_teachings_of_kauyon_research") or
		cpu_manager.cpu_player:IsResearchComplete("tau_teachings_of_montka_research")) then
		self.tierLevel = 4
	elseif self:GetBuildingCountByName("tau_shrine_of_montka") > 0 or
		self:GetBuildingCountByName("tau_shrine_of_kauyon") > 0 then
		self.tierLevel = 3
	elseif self:GetBuildingCountByName("tau_research_building") > 0 then
		self.tierLevel = 2
	end
end

