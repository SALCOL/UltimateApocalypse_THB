class 'OrksHQTactic' (BaseTactic)

OrksHQ = {}

function OrksHQTactic:__init( base_ai ) super( base_ai )

	self:SetName("Orks HQ Tactic")
end

function OrksHQTactic:InitAbilities()

	-- Init ability ID's
	if (OrksHQ.superweapon_id == nil) then
		OrksHQ.superweapon_id = cpu_manager.stats:GetAbilityID( "ork_fighta_bomma_bombs" )
	end
end

function OrksHQTactic:DoAbilities()

	-- Try to activate the Bombs superweapon
	if (self.base_ai:CanDoAbility(OrksHQ.superweapon_id)) then
	
		local iRange = self.base_ai:GetAbilityRange(OrksHQ.superweapon_id)
		local oSquad = Ability.Filters.CloseEnemy(self.base_ai:GetPosition(), iRange, 25)
		if (oSquad ~= nil) then		
			if (oSquad:IsAttacking()) then
				self.base_ai:DoSpecialAbilitySquad(OrksHQ.superweapon_id, oSquad:GetSquad())
			end
		end
	end
end
